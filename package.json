{
  "name": "pdf-merger",
  "version": "1.0.0",
  "description": "A beautiful macOS desktop application for merging PDF files",
  "main": "electron.js",
  "scripts": {
    "start": "npm run build:css && concurrently \"npm run watch:css\" \"electron .\"",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "package:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pdf",
    "merger",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.9.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.pdfmerger.app",
    "productName": "PDF Merger",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "electron.js",
      "preload.js",
      "src/**/*",
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}